<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cubeAnimationContainer"
    android:background="@android:color/transparent"
    android:layout_height="@dimen/cube_container_height">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
       app:cardBackgroundColor="@android:color/transparent"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mainImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Main image" />

            <!-- Greeting Text for Main Container -->
            <TextView
                android:id="@+id/mainGreetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="16dp"
                android:text="Welcome!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:background="#80000000"
                android:gravity="center" />

            <!-- Button for Main Container -->
            <Button
                android:id="@+id/mainActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Action"
                android:padding="16dp"
                android:layout_margin="16dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nextContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nextImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Next image" />

            <!-- Greeting Text for Next Container -->
            <TextView
                android:id="@+id/nextGreetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="16dp"
                android:text="Welcome!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:background="#80000000"
                android:gravity="center" />

            <!-- Button for Next Container -->
            <Button
                android:id="@+id/nextActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Action"
                android:padding="16dp"
                android:layout_margin="16dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>